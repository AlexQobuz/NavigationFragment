<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="200dp"
    android:id="@+id/constrainlayout_item_fragment_list"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_article" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title_item_article_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="36dp"
        android:text="Title"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitle_item_article_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtitle"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/title_item_article_list"
        app:layout_constraintTop_toBottomOf="@+id/title_item_article_list" />

    <TextView
        android:id="@+id/text_item_article_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description de l'article"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/title_item_article_list"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_item_article_list" />

</androidx.constraintlayout.widget.ConstraintLayout>