<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_album_detail"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/teal_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Album"
            />

        <ImageView
            android:id="@+id/image_detail_album"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@color/teal_200"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_album_detail"
            android:layout_marginTop="32dp"
            />

        <TextView
            android:id="@+id/title_detail_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre de l'album"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_detail_album"
            android:layout_marginTop="8dp"
            android:textSize="32dp"
            />

        <TextView
            android:id="@+id/description_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Petit descriptif de l'album"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_detail_album"
            android:padding="16dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>